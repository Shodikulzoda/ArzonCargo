<MudDialog @onkeydown="OnKeyDown" Focusable="true" AutoFocus="true">
    <DialogContent>
        <MudText Typo="Typo.h6">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Нет</MudButton>
        <MudButton OnClick="Confirm" Color="Color.Primary" AutoFocus="true">Да</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string ContentText { get; set; } = "Продукт не добавлен в базу данных. Хотите добавить?";

    void Confirm() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

    private void OnKeyDown(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" || args.Key == "NumpadEnter")
        {
            Confirm();
        }
    }
}